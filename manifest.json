{
  "manifest_version": 2,
  "name": "Single Player Wikigame",
  "version": "1.0",
  "description": "Play Wikiracing on Wikipedia by yourself!",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.wikipedia.org/*",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
